# ============================================
# ENVIRONMENT CONFIGURATION
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# ============================================
# BLOCKCHAIN CONFIGURATION
# ============================================
# Polygon Mumbai Testnet
MUMBAI_RPC_URL=https://rpc-mumbai.maticvigil.com
POLYGON_SCAN_API_KEY=your_polygonscan_api_key_here

# Private keys (FOR TESTNET ONLY! Never use mainnet keys here)
DEPLOYER_PRIVATE_KEY=your_deployer_wallet_private_key
PLATFORM_WALLET_ADDRESS=your_platform_wallet_address

# Contract addresses (fill after deployment)
ESCROW_CONTRACT_ADDRESS=
DISPUTE_CONTRACT_ADDRESS=

# ============================================
# GCP CONFIGURATION
# ============================================
GCP_PROJECT_ID=your-gcp-project-id
GCP_REGION=us-central1
GCP_BUCKET_NAME=freelance-escrow-uploads

# Firestore
FIRESTORE_DATABASE_ID=(default)

# ============================================
# BACKEND CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Security
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# FRONTEND CONFIGURATION
# ============================================
VITE_API_URL=http://localhost:8000
VITE_CHAIN_ID=80001
VITE_CHAIN_NAME=Polygon Mumbai
VITE_RPC_URL=https://rpc-mumbai.maticvigil.com
VITE_ESCROW_CONTRACT_ADDRESS=
VITE_BLOCK_EXPLORER=https://mumbai.polygonscan.com

# ============================================
# OPTIONAL: ANALYTICS
# ============================================
VITE_GA_TRACKING_ID=
VITE_SENTRY_DSN=

# ============================================
# DEVELOPMENT FLAGS
# ============================================
NODE_ENV=development
DEBUG=true
